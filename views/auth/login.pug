extends ../layout/index

block contenido
    div(class="py-6")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal")  Raices
        h2(class="text-center text-2xl font-extrabold")=pagina

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow rounded-2xl")
                form(method="post" action="/auth/login")
                    if error && mensaje
                        div(class="mb-4 bg-red-600 hover:bg-red-700 text-white text-sm text-center font-bold uppercase rounded-xl px-2 py-2")=mensaje
                    else
                        div()
                    input(type="hidden" name="_csrf" value=csrf)
                    div(class="mb-4")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold", for="email") Email:
                        input(id="email", name="email", class="w-full px-3 py-2 border border-gray-400 rounded-md", type="email", value=email, placeholder="Ingresa tu email")
                    div(class="mb-4")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold", for="password") Password:
                        input(id="password", name="password", class="w-full px-3 py-2 border border-gray-400 rounded-md", type="password", placeholder="Ingresa tu password")
                    div(class="mb-4")
                        input(type="submit", value="Iniciar Sesi√≥n", class="text-white bg-indigo-600 w-full uppercase font-bold rounded-md py-2")
                    div(class="mb-4 flex items-center justify-between w-full")
                        div(class="flex justify-between")
                            a(href="/auth/registro", class="text-gray-500 hover:text-gray-600 text-sm") Registrar Cuenta
                            a(href="/auth/olvide-password", class="text-gray-500 text-sm") Recuperar Password