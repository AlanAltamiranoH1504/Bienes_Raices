extends ../layout/index

block contenido
    div(class="py-0")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal")  Raices
        h2(class="text-center text-2xl font-extrabold")=pagina
        h3(class="text-center text-xl font-bold mb-5")=usuario

        a(href="/propiedades/crear", class="bg-indigo-600 hover:bg-indigo-700 rounded-md text-center text-white px-10 py-2 uppercase font-bold inline-block w-full md:w-auto text-sm") Publicar Propiedad
        if (propiedades && propiedades !== null)
            //pre= JSON.stringify(propiedades, undefined, 2)
            div(class="container mt-4")
                div(class="bg-green-600 hover:bg-green-700 text-white uppercase font-bold px-4 py-2 text-center max-w-md mx-auto rounded-md") Estas son tus propiedades
            div(class="container mt-4 mb-4")
                each propiedad in propiedades
                    div(class="bg-white shadow rounded-lg")
                        ul(class="divide-y divide-gray-200")
                            li
                                div(class="mt-3 p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4")
                                    div(class="sm:w-1/4 md:w-1/6 items-center")
                                        img(src=`uploads/${propiedad.imagen}`, class="w-full block")
                                    div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 flex flex-col justify-center")
                                        a(href=`propiedad/${propiedad.id}`, class="block text-2xl font-extrabold truncate my-2")=propiedad.titulo
                                        p(class="text-sm text-black font-bold my-2")=propiedad.categoria.nombre
                                        div(class="flex items-center")
                                            <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="0 0 512 512"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path fill="#000000" d="M320 96L192 96 144.6 24.9C137.5 14.2 145.1 0 157.9 0L354.1 0c12.8 0 20.4 14.2 13.3 24.9L320 96zM192 128l128 0c3.8 2.5 8.1 5.3 13 8.4C389.7 172.7 512 250.9 512 416c0 53-43 96-96 96L96 512c-53 0-96-43-96-96C0 250.9 122.3 172.7 179 136.4c0 0 0 0 0 0s0 0 0 0c4.8-3.1 9.2-5.9 13-8.4zm84 88c0-11-9-20-20-20s-20 9-20 20l0 14c-7.6 1.7-15.2 4.4-22.2 8.5c-13.9 8.3-25.9 22.8-25.8 43.9c.1 20.3 12 33.1 24.7 40.7c11 6.6 24.7 10.8 35.6 14l1.7 .5c12.6 3.8 21.8 6.8 28 10.7c5.1 3.2 5.8 5.4 5.9 8.2c.1 5-1.8 8-5.9 10.5c-5 3.1-12.9 5-21.4 4.7c-11.1-.4-21.5-3.9-35.1-8.5c-2.3-.8-4.7-1.6-7.2-2.4c-10.5-3.5-21.8 2.2-25.3 12.6s2.2 21.8 12.6 25.3c1.9 .6 4 1.3 6.1 2.1c0 0 0 0 0 0s0 0 0 0c8.3 2.9 17.9 6.2 28.2 8.4l0 14.6c0 11 9 20 20 20s20-9 20-20l0-13.8c8-1.7 16-4.5 23.2-9c14.3-8.9 25.1-24.1 24.8-45c-.3-20.3-11.7-33.4-24.6-41.6c-11.5-7.2-25.9-11.6-37.1-15c0 0 0 0 0 0l-.7-.2c-12.8-3.9-21.9-6.7-28.3-10.5c-5.2-3.1-5.3-4.9-5.3-6.7c0-3.7 1.4-6.5 6.2-9.3c5.4-3.2 13.6-5.1 21.5-5c9.6 .1 20.2 2.2 31.2 5.2c10.7 2.8 21.6-3.5 24.5-14.2s-3.5-21.6-14.2-24.5c-6.5-1.7-13.7-3.4-21.1-4.7l0-13.9z"/></svg>
                                            span(class="mx-2")
                                             p(class="text-sm text-black font-bold")=propiedad.precio.nombre
                                    div(class="sm:w-1/4 md:w-2/6 lg:w-1/6")
                                        form(action=`/estado/${propiedad.publicado}/${propiedad.id}`)
                                            input(type="submit" class=`px-2 py-2 uppercase leading-5 block w-full font-bold rounded ${propiedad.publicado ? 'bg-green-300 hover:bg-green-400 text-green-800' : 'bg-red-300 hover:bg-red-400 text-red-800'}`, value=`${propiedad.publicado ? 'Publicado': 'No Publicado'}`)
                                        a(href=`/editar-propiedad/${propiedad.id}`, class="uppercase font-bold text-center block py-1 bg-indigo-300 text-indigo-600 rounded hover:bg-indigo-400 my-2") Editar
                                        a(href=`/eliminar-propiedad/${propiedad.id}`, class="uppercase font-bold text-center py-1 block bg-red-300 text-red-600 rounded hover:bg-red-400") Eliminar
                                        a(href=`/mensajes/${propiedad.id}`, class="uppercase font-bold text-center py-1 block bg-yellow-300 text-yellow-600 rounded hover:bg-yellow-400 my-2") Mensajes
                div(class="bg-white shadow rounded-lg mt-4 flex items-center justify-between py-2 px-4 border-t border-gray-400 max-w-md ")
                    div()
                        nav(class="relative z-0 inline-flex rounded-md ")
                             - var n = 1;
                             while n <= cantidadPaginas
                                 a(href=`/mis-propiedades?pagina=${n}`, class=`${paginaActual == n ? 'bg-indigo-600 hover:bg-indigo-800 text-white border px-4 py-2' : 'hover:bg-gray-100' } relative inline-flex items-center px-4 py-2 border text-sm font-semibold`)= n
                                 - n++;
        else
            div(class="container my-4")
                div(class="bg-green-600 hover:bg-green-700 text-white uppercase font-bold px-4 py-2 text-center max-w-md mx-auto rounded-md") Actualmente no cuentas con propiedades