extends ../layout/index

block contenido

    //pre= JSON.stringify(mensajes, undefined, 2)
    div(class="py-0")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal")  Raices
        h2(class="text-center text-2xl font-extrabold")=pagina
        h3(class="text-center text-xl font-bold mb-5")=usuario

    if mensajes.length >= 1
        div(class="bg-indigo-600 hover:bg-indigo-700 uppercase text-white font-bold text-center py-2 px-4 rounded-md mb-5")
            h1(class="") Mensajes para la propiedad
        //div()
        //    div(class="bg-green-600 hover:bg-green-700 uppercase text-white font-bold text-center py-2 px-4 rounded-md mb-5")
        //        a(href="volver", class="") Volver
        each mensaje in mensajes
            div(class="bg-white shadow rounded-lg")
                ul(class="divide-y divide-gray-200")
                    li
                        div(class="mt-3 p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between  md:items-center space-y-8 gap-4 item")
                            div(class="sm:w-1/4 md:w-1/6")
                                img(src="/img/user2.png")
                            div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 flex flex-col justify-between")
                                p(class="font-bold uppercase") Nombre del Interesado:
                                span(class="font-normal mb-2")=mensaje.usuario.nombre
                                p(class="font-bold uppercase") Email de Contacto:
                                span(class="font-normal mb-2")=mensaje.usuario.email
                                p(class="font-bold uppercase") Fecha de Envio de Mensaje:
                                span(class="font-normal mb-2")= Fechas(mensaje.createdAt)
                            div(class="sm:w-1/4 md:w-2/6 lg:w-1/6")
                                p(class="font-bold uppercase") Mensaje Escrito:
                                span(class="font-normal")=mensaje.mensaje
    else
        div(class="bg-orange-500 hover:bg-orange-600 uppercase text-white font-bold text-center py-2 px-4 rounded-md mb-5")
            h1(class="") No hay mensajes disponibles para esta propiedad
